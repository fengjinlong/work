@import '/px2rem.styl'
@import 'common.css'
body
  background-color #fff
  .slideBox
    position relative
    overflow hidden
    width 100%;
    height px(303)
    margin-bottom px(25)
    .bd
      position relative
      z-index 0
      li
        position relative
        text-align center
        a
          display block
          img
            background url('../images/load.gif') center center no-repeat
            vertical-align top
            width 100%
            height 100%
    .hd
      position absolute
      height 28px
      bottom 0
      right 0
      z-index 1
      li
        display inline-block
        width 5px
        height 5px
        -webkit-border-radius 5px
        -moz-border-radius 5px
        border-radius 5px
        text-indent -9999px
        overflow hidden
        margin 0 6px
  .module
    ul
      width 100%
      display flex
      flex-flow row wrap
      align-content flex-start
      li
        flex 0 0 25%
        margin-bottom px(20)
        a
          display block
          text-decoration none
        .img
          display block
          width px(106)
          height px(106)
          bg-image('s1')
          background-size 100% 100%
          margin 0 auto
          &.m2
            bg-image('s2')
            background-size 100% 100%
          &.m3
            bg-image('s3')
            background-size 100% 100%
          &.m4
            bg-image('s4')
            background-size 100% 100%
          &.m5
            bg-image('s5')
            background-size 100% 100%
          &.m6
            bg-image('s6')
            background-size 100% 100%
          &.m7
            bg-image('s7')
            background-size 100% 100%
          &.m8
            bg-image('s8')
            background-size 100% 100%
        .font
          text-align center
          font-size 12px
          color #020202
          display block
          margin-top px(15)
  .line
    width px(400)
    height px(40)
    margin px(20) auto 0
    display flex
    span
      display inline-block
      &.span1
        flex 0 0 px(68)
        height px(1)
        border 1px solid #777
        margin-top px(20px)
      &.span2
        flex 1
        text-align center
        font-size 15px
        color #020202
        line-height px(40)
      &.span3
        flex 0 0 px(68)
        height px(1)
        border 1px solid #777
        margin-top px(20px)
  .lists
    padding-bottom px(120)
    .list
      margin-top px(20)
      a
        display flex
        margin 0 auto
        width px(665)
        height px(245)
        text-decoration none
        .imgcon
          flex 0 0 px(452)
          height 100%
          img
            width 100%
            height 100%
        .font
          flex 1
          background-color #efefef
          img
            display block
            margin px(29) auto 0
            width px(178)
            height px(69.3)
          .p1
            font-size 12px
            color #020202
            text-align center
            margin-top px(17)
          .p2
            font-size 12px
            color #f93f3f
            text-align center
            margin-top px(19)