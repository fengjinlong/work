@import '/px2rem.styl'

html
  width 100%
  height 100%
  body
    width 100%
    height 100%
    bg-image_jpg(loginbg)
    background-size 100% 100%
    header
      padding-top px(248)
      img
        display block
        width px(317)
        height px(91)
        margin 0 auto
    .user
      width px(620)
      height px(100)
      border-radius px(50)
      margin px(55) auto 0
      display flex
      background-color rgba(202,202,202,.8)
      input
        flex 1
        background-color transparent
        font-size 15px
        border none
        color #4c4c4c
        padding-left px(40)
      a
        display block
        &.icon1
          flex 0 0 px(32)
          height px(37)
          margin px(32) 0 px(32) px(50)
          bg-image(user)
          background-size 100% 100%
        &.icon2
          flex 0 0 px(40)
          height px(23)
          margin px(32) px(50) px(32) px(0)
    .password
      width px(620)
      height px(100)
      border-radius px(50)
      margin px(24) auto 0
      display flex
      background-color rgba(202,202,202,.8)
      input
        flex 1
        background-color transparent
        font-size 15px
        border none
        color #4c4c4c
        padding-left px(40)
      a
        display block
        &.icon1
          flex 0 0 px(32)
          height px(37)
          margin px(32) 0 px(32) px(50)
          bg-image(key)
          background-size 100% 100%
        &.icon2
          flex 0 0 px(40)
          height px(23)
          margin px(38) px(50) px(32) px(0)
          bg-image(see)
          background-size 100% 100%
    .login
      width px(620)
      height px(100)
      border-radius px(50)
      margin px(24) auto 0
      background-color #bc1600
      a
        display block
        width 100%
        height 100%
        line-height px(100)
        text-align center
        color #c8d3ca
        font-size 16px
        text-decoration none
    footer
      display flex
      position fixed
      width 100%
      left 0
      bottom px(60)
      a
        display block
        flex 1
        outline 0
        text-decoration: none;
        span
          display block
          &.text
            text-align center
            color #aeafa9
            font-size 15px
          &.img
            width px(84)
            height px(84)
            margin 0 auto px(20)
            &.img1
              bg-image(regist)
              background-size 100% 100%
            &.img2
              bg-image(wechat)
              background-size 100% 100%
            &.img3
              bg-image(forget)
              background-size 100% 100%
          