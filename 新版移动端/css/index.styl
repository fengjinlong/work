.slideBox
  position relative
  overflow hidden
  width 100%;
  height px(303)
  margin-bottom px(25)
  .bd
    position relative
    z-index 0
    li
      position relative
      text-align center
      a
        display block
        img
          background url('../images/load.gif') center center no-repeat
          vertical-align top
          width 100%
          height 100%
  .hd
    position absolute
    height 28px
    bottom 0
    right 0
    z-index 1
