@import '/px2rem.styl'
@import 'common.css'

body
  width 100%
  height 100%
  background-color #efefef
  a
    display block
    text-decoration none
  img
    display block  
  header
    height px(100)
    width 100%
    position relative
    z-index 666
    display flex
    background-color #f4f4f4
    border-bottom 1px solid #b5b5b5
    .logo
      flex 0 0 px(155)
      a
        display block
        width px(131)
        height px(38)
        margin-left px(10)
        margin-top px(30)
        bg-image 'logo'
        background-size 100% 100%
    .input
      background-color #fff
      height px(70)
      flex 1
      margin-top px(15)
      display flex
      border-radius px(4)
      input
        flex 1
        height 100%
        font-size 13px
        border none
        padding-left px(26)
      a
        display block
        flex 0 0 px(38)
        margin px(16)
        height px(38)
        bg-image 'search'
        background-size 100% 100%
    .buycart
      flex 0 0 px(100)
      a
        display block
        margin-top px(25)
        margin-left px(16)
        width px(64)
        height px(51)
        bg-image 'buycart'
        background-size 100% 100%
        position relative
        span
          display block
          width px(41)
          height (41)
          text-align center
          line-height px(41)
          color #fff
          font-size 12px
          background-color #e9714e
          border-radius 100%
          position absolute
          top px(-16px)
          right px(-10px)
  .fixedtit
    width px(573)
    height px(50)
    position fixed
    z-index 100
    top px(102)
    right 0
    background-color #efefef
    h1
      padding-left px(28)
      font-weight bold
      font-size 14px
      height px(50)
      line-height px(50)
  main
    background-color #efefef
    display flex
    nav
      flex 0 0 px(177)
      height px(950)
      overflow hidden
      ul
        li
          width 100%
          height px(96)
          line-height px(96)
          font-size 14px
          color #000
          text-align center
          background-color #fff
          position relative
          margin-bottom px(4)
          span
            display none
            width px(10)
            height px(94)
            position absolute
            top px(2)
            left px(0)
            background-color #ffab47
          &.active
            background-color #efefef
            span
              display block
    .content
      flex 1
      display flex
      height px(950)
      overflow hidden
      padding-left px(28)
      .titname
        padding-right px(40)
        flex 1
        .lists
          height px(950)
          ul
            width 100%
            li
              h2
                font-weight bold
                font-size 14px
                height px(50)
                line-height px(50)
              .plists
                padding-top px(20)
                .p
                  font-size 12px
                  height px(71)
                  line-height px(71)
                  width px(440)
                  overflow hidden
                  // text-overflow ellipsis
                  // display -webkit-box
                  // -webkit-line-clamp: 1
                  // -webkit-box-orient vertical
      .titcont
        flex 0 0 px(50)
        height px(850)
        margin-top px(100)
        ul
          li
            width px(30)
            height px(30)
            line-height px(30)
            border-radius px(2)
            text-align center
            font-size 13px
            &.active
              color #e9714e
              
