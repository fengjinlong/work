@import '/px2rem.styl'
html
  width 100%
  height 100%
  body
    width 100%
    height 100%
    background-color #f1f1f1
  .partone
    header
      position relative
      text-align center
      width 100%
      height px(100)
      line-height px(100)
      font-size 17px
      border-bottom 1px solid #c0beba
      background-color #f7f7f7
      a
        position absolute
        width px(20)
        height px(32)
        top px(34)
        left px(41)
        bg-image(bac)
        background-size 100% 100%
    .tit
      width 100%
      font-size 15px
      color #4c4c4c
      padding-top px(24)
      padding-left px(18)
      padding-bottom px(22)
    .input
      font-size 15px
      padding-top px(24)
      padding-bottom px(24)
      padding-left px(18)
      background-color #fff
      width 100%
      border none
    .code
      display flex
      .input
        font-size 15px
        padding-top px(24)
        padding-bottom px(24)
        padding-left px(18)
        background-color #fff
        flex 1
        border none
      button
        flex 0 0 px(247)
        height px(82)
        background-color #bc1600
        border none
        font-size 15px
        color #f1f1f1
    .btn
      text-align center
      text-decoration none
      display block
      border none
      background-color #bc1600
      width px(722)
      height px(86)
      color #fff
      line-height px(86)
      margin px(62) auto 0
      font-size 16px
      border-radius px(6)
  .parttwo
    display none
    .header
      position relative
      text-align center
      width 100%
      height px(100)
      line-height px(100)
      font-size 17px
      border-bottom 1px solid #c0beba
      background-color #f7f7f7
      a
        position absolute
        left 0
        width px(100)
        height px(100)
        span
          position absolute
          width px(20)
          height px(32)
          top px(34)
          left px(41)
          bg-image(bac)
          background-size 100% 100%
    .tit
      width 100%
      font-size 15px
      color #4c4c4c
      padding-top px(24)
      padding-left px(18)
      padding-bottom px(22)
    .input
      font-size 15px
      padding-top px(24)
      padding-bottom px(24)
      padding-left px(18)
      background-color #fff
      width 100%
      border none
    .agree
      margin-top px(28)
      margin-left px(18)
      .checkbox
        width px(22)
        height px(22)
        margin-right px(6)
      span
        font-size 12px
      a
        font-size 12px
        color #bc1600
    .btn
      display block
      text-align center
      text-decoration none
      border none
      background-color #bc1600
      width px(722)
      height px(86)
      color #fff
      line-height px(86)
      margin px(62) auto 0
      font-size 16px
      border-radius px(6)
    
